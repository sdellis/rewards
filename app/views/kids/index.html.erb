    
<h1>Rewards Tracker</h1>
<div class="row-fluid">
  <ul class="thumbnails">
    <% @kids.each do |kid| %>
      <li class="span3">
      <div class="thumbnail">
        <a href="#" class="thumbnail">
          <img alt="<%= kid.name %>" style="width: 250px; height: 250px;" src="<%= kid.image %>">
        </a>
        <div class="caption">
          <h3><%= kid.name %></h3>
          <h4>Points:<%= kid.total_points %></h4>
          <%= link_to '+1 Point', chores_path(kid_id: kid.id, points: 1), method: :post, class: "btn btn-primary" %>
          <%= link_to raw("<i class=icon-star></i>+5 Bonus"), chores_path(kid_id: kid.id, points: 5), method: :post, class: "btn btn-warning" %>
          <p>
            <form method="post" action="<%= kid_path(kid) %>">
              <input id="spendamt" name="spendamt" type="text" style="width:15px; margin-top:10px"/>
              <button class="btn btn-danger">
                Spend Points
              </button>
              <input name="_method" type="hidden" value="put">
            </form>
          </p>
          <!--<p><%= button_to 'Delete', kid, confirm: 'Are you sure?', method: :delete %></p>-->
        </div>
      </div>
      </li>
    <% end %>
  </ul>
</div>

<br />

